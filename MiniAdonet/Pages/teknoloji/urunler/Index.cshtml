@page
@model teknoloji.urunler.IndexModel
@{
    ViewData["Title"] = "Ürün Listesi";
}

<div class="container mt-4">
    <h2 class="mb-4">Ürün Listesi</h2>

    <div class="mb-3">
        <a asp-page="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Yeni Ürün Ekle
        </a>
    </div>

    <table class="table table-bordered table-hover table-striped">
        <thead class="table-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Ürün Adı</th>
                <th scope="col">Fiyat</th>
                <th scope="col">Stok</th>
                <th scope="col">Kategori</th>
                <th scope="col">İşlemler</th>
            </tr>
        </thead>
        <tbody class="text-center align-middle">
            @foreach (var urun in Model.UrunList)
            {
                <tr>
                    <td>@urun.UrunID</td>
                    <td>@urun.UrunAdi</td>
                    <td>@urun.Fiyat.ToString("C")</td>
                    <td>@urun.Stok</td>
                    <td>@urun.KategoriAdi</td>
                    <td class="d-flex justify-content-center">
                        <a asp-page="Edit" asp-route-id="@urun.UrunID" class="btn btn-sm m-2 btn-primary">Düzenle</a>
                        <a href="/teknoloji/urunler/Delete?id=@urun.UrunID" class="btn btn-sm m-2 btn-danger" onclick="return confirm('Bu yöneticiyi silmek istediğinize emin misiniz?');">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
